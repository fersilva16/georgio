{
  "name": "georgio",
  "author": "Fernando Silva <fernandonsilva16@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fersilva16/georgio.git"
  },
  "bugs": {
    "url": "https://github.com/fersilva16/georgio/issues"
  },
  "homepage": "https://github.com/fersilva16/georgio#readme",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "deploy:fly": "fly deploy --detach",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "lint --fix",
    "postinstall": "simple-git-hooks",
    "start": "node dist/index.js",
    "test": "jest",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@notionhq/client": "^2.2.3",
    "discord.js": "^14.7.1",
    "dotenv-safe": "^8.2.0",
    "koa": "^2.14.1",
    "koa-logger": "^3.2.1",
    "luxon": "3.2.1",
    "node-cron": "^3.0.2",
    "node-html-markdown": "^1.3.0",
    "node-themoviedb": "^0.2.8",
    "puppeteer": "^19.7.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "rrule": "^2.7.2",
    "tsup": "^6.6.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__router": "^12.0.0",
    "@types/luxon": "3.2.0",
    "@types/node": "18.11.18",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "cheerio": "1.0.0-rc.12",
    "clipboardy": "^3.0.0",
    "esbuild": "0.16.17",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.0",
    "eslint-plugin-jsx-a11y": "6.7.0",
    "eslint-plugin-react": "7.32.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "hygen": "^6.2.11",
    "inflection": "^2.0.1",
    "nano-staged": "0.8.0",
    "node-fetch": "^3.3.1",
    "prettier": "2.8.2",
    "simple-git-hooks": "2.8.1",
    "tsx": "^3.12.2",
    "typescript": "4.9.4"
  },
  "nano-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,tsx}": [
      "bash -c 'pnpm type-check'"
    ],
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  }
}
